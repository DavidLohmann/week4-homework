<h1>Weather Search</h1>

<!-- Action element tells the app where to send the data -->
<form action="/weather/conditions">
  <div class="form-group">
    <label>Enter a City:</label>
    <!-- name attribute will create the "?city=" component in the url -->
    <input name="city" type="text" class="form-control input-md" placeholder="Example: Honolulu, HI">
  </div>
  <input type="submit" class="input-md">
</form>
