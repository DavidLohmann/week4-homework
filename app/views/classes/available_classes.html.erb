          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="/">Log Out</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

    <div class="container">

      <div class="starter-template">
        <h1>Available Classes</h1>
        <p class="lead">Below is a list of classes available for Course Exchange.</p>
      </div>

    </div><!-- /.container -->

    <div class="table_header">
      <div class="col-md-2">Course</div>
      <div class="col-md-1">Section</div>
      <div class="col-md-2">Section Title</div>
      <div class="col-md-1">Credits</div>
      <div class="col-md-3">Times</div>
      <div class="col-md-2">Instructor(s)</div>
      <div class="col-md-1">Exchange</div>
    </div>

    <% @course_list.each do |course| %>
    <div class="row">
      <div class="col-md-2">
        <a href="/show"><%= course %></a>
      </div>
      <div class="col-md-1">61</div>
      <div class="col-md-2">Class Name</div>
      <div class="col-md-1">1</div>
      <div class="col-md-3">Thu 1:30 PM - 4:45 PM</div>
      <div class="col-md-2">Last, First</div>
      <div class="col-md-1">
        <p><a class="btn btn-primary btn-lg" role="button">Propose &raquo;</a></p>
      </div>
    </div>
    <% end%>


